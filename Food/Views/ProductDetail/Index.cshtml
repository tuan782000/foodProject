@model IEnumerable<Food.Models.ReviewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!-- catg header banner section -->
<section id="aa-catg-head-banner">
    <img src="/images/banner/foodservice-mfg-hero-1920x300.jpg" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>@ViewBag.NameProduct</h2>
                <ol class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li><a href="#">Product</a></li>
                    <li class="active">@ViewBag.NameProduct</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->
<!-- product category -->
<section id="aa-product-details">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-product-details-area">
                    <div class="aa-product-details-content">
                        <div class="row">
                            <!-- Modal view slider -->
                            <div class="col-md-5 col-sm-5 col-xs-12">
                                <div class="aa-product-view-slider">
                                    <div id="demo-1" class="simpleLens-gallery-container">
                                        <div class="simpleLens-container">
                                            <div class="simpleLens-big-image-container"><a data-lens-image="@ViewBag.Img1" class="simpleLens-lens-image"><img src="@ViewBag.Img1" class="simpleLens-big-image"></a></div>
                                        </div>
                                        <div class="simpleLens-thumbnails-container">
                                            <a data-big-image="@ViewBag.Img1" data-lens-image="@ViewBag.Img1" class="simpleLens-thumbnail-wrapper" href="#">
                                                <img src="@ViewBag.Img1" height="80" width="40">
                                            </a>
                                            <a data-big-image="@ViewBag.Img2" data-lens-image="@ViewBag.Img2" class="simpleLens-thumbnail-wrapper" href="#">
                                                <img src="@ViewBag.Img2" height="80" width="40">
                                            </a>
                                            <a data-big-image="@ViewBag.Img3" data-lens-image="@ViewBag.Img3" class="simpleLens-thumbnail-wrapper" href="#">
                                                <img src="@ViewBag.Img3" height="80" width="40">
                                            </a>
                                            <a data-big-image="@ViewBag.Img4" data-lens-image="@ViewBag.Img4" class="simpleLens-thumbnail-wrapper" href="#">
                                                <img src="@ViewBag.Img4" height="80" width="40">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Modal view content -->
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                <div class="aa-product-view-content">
                                    <h3>@ViewBag.NameProduct</h3>
                                    <div class="aa-price-block">
                                        <span class="aa-product-view-price">$@ViewBag.Price</span>

                                    </div>
                                    <p>@ViewBag.ShortDescription</p>

                                    <form asp-controller="ProductDetail" asp-action="AddToCart" method="post">
                                        <div class="aa-prod-quantity">
                                            <select id="quantityProuct" name="quantityProuct">
                                                <option selected="1" value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                                <option value="6">6</option>
                                            </select>
                                        </div>
                                        <div>
                                            <input type="text" name="productid" value="@ViewBag.Id" id="productid" hidden />
                                        </div>
                                        <div class="aa-prod-view-bottom">
                                            <input type="submit" class="aa-add-to-cart-btn" value="Add To Cart" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="aa-product-details-bottom">
                        <ul class="nav nav-tabs" id="myTab2">
                            <li><a href="#description" data-toggle="tab">Description</a></li>
                            <li><a href="#review" data-toggle="tab">Reviews</a></li>
                        </ul>

                        <!-- Tab panes comment-->
                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="description">
                                <p>@ViewBag.Description</p>
                            </div>
                            <div class="tab-pane fade " id="review">
                                <div class="aa-product-review-area">
                                    <h4>2 Reviews for Food</h4>
                                    <ul class="aa-review-nav">

                                        @{
                                            foreach (var item in Model)
                                            {
                                                <li>
                                                    <div class="media">
                                                        <div class="media-left">
                                                            <a href="#">
                                                                <img class="media-object" src="images/Users/userBlack-150-150.png" alt="girl image">
                                                            </a>
                                                        </div>
                                                        <div class="media-body">
                                                            <h4 class="media-heading"><strong>@item.review_UserName</strong> - <span>@item.review_UploadTime</span></h4>
                                                            <p>@item.review_Comment</p>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                        }

                                    </ul>
                                    <h4>Add a Comment</h4>

                                    <!-- review form -->
                                    <div class="container">
                                        <form asp-controller="ProductDetail" asp-action="Comment" method="post">
                                            <div class="form-group row">
                                                <input type="text" id="" name="idproduct" value="@ViewBag.Id" hidden />
                                            </div>
                                            <div class="form-group row">
                                                <input type="text" id="" name="comment" />
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" value="Comment" />
                                            </div>
                                        </form>
                                        <label>@ViewBag.Mess</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Related product -->
                    <div class="aa-product-related-item">
                        <h3>Related Products</h3>
                        <ul class="aa-product-catg aa-related-item-slider">
                            @{
                                foreach (var item in ViewBag.ProductList)
                                {
                                    <!-- start single product item -->
                                    <li>
                                        <figure>
                                            <a class="aa-product-img" href="/productdetail?id=@item.pd_Id"><img src="@item.pd_Img1" alt="polo shirt img"></a>
                                            <a class="aa-add-card-btn" href="/productdetail?id=@item.pd_Id"><span class="fa fa-shopping-cart"></span>Add To Cart</a>
                                            <figcaption>
                                                <h4 class="aa-product-title"><a href="/productdetail?id=@item.pd_Id">@item.pd_Name</a></h4>
                                                <span class="aa-product-price">$@item.pd_Price</span>
                                            </figcaption>
                                        </figure>
                                    </li>
                                }
                            }







                        </ul>
                        <!-- quick view modal -->
                        
                        <!-- / quick view modal -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / product category -->




<script src="https://www.google.com/recaptcha/api.js" async defer></script>



