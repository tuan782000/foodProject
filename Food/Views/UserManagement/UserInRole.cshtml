<div class="card-header">
    <h3 class="card-title">UserInRole</h3>
</div>
<div class="card-body">
    <form asp-action="UserInRole" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" value="@ViewBag.Id" name="id_User" />
        <div class="form-group">
            <label class="control-label">Email: </label>
            <span class="text-danger">@ViewBag.Email</span>
        </div>
        <div class="form-group">
            <label class="control-label">User Name: </label>
            <span class="text-danger">@ViewBag.UserName</span>
        </div>
        <div class="form-group">
            <label class="control-label">Role: </label>
            <span class="text-danger">@ViewBag.RoleName</span>
        </div>
        <div class="form-group">
            <label class="control-label">Chane Role: </label>
            <div class="form-group">
                <select name="NameSelect" class="form-control">
                    @foreach (var item in Model)
                    {
                        <option value="@item.Name">@item.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-primary">Back to list</a>
        </div>
    </form>
</div>

