@model Food.Entity.ContactSystem

@{ ViewData["Title"] = "Edit";
                Layout = "~/Views/Shared/_LayoutAdmin/_LayoutAdmin.cshtml"; }

<div class="card-header">
    <h3 class="card-title">Edit</h3>
</div>
<div class="card-body">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Contact_Id" />
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="Contact_Address" class="control-label"></label>
                    <input asp-for="Contact_Address" class="form-control" />
                    <span asp-validation-for="Contact_Address" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="Contact_Phone" class="control-label"></label>
                    <input asp-for="Contact_Phone" class="form-control" />
                    <span asp-validation-for="Contact_Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="Contact_Email" class="control-label"></label>
                    <input asp-for="Contact_Email" class="form-control" />
                    <span asp-validation-for="Contact_Email" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Contact_Description" class="control-label"></label>
            <textarea asp-for="Contact_Description" class="form-control"></textarea>
            <span asp-validation-for="Contact_Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-primary">Back to list</a>
        </div>
    </form>
</div>
